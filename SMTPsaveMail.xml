
<rules port="25" mode="TCP">

	<state id="0" >
			<condition regex="" tostate="1" >
				<action name="SendMessage" arg1="220 localhost SMTP Ready\n"></action>
			</condition>
	
	</state>
	
	<state id="1">
	
		<condition regex="EHLO (.*)\n" tostate="2" >
			<action name="SendMessage" arg1="250 @G=1_\n"></action>
   		</condition>
   		
		
	</state>
	
	
	
	<state id="2">
		<condition regex="" tostate="3">
			<action name="PipeToFile" arg1="test.txt"></action>
		</condition>
	</state>
	
	
	<state id="3">
		<condition regex="MAIL FROM:(.*)\n" >
				<action name="SendMessage" arg1="250 OK\n"></action>
	   	</condition>
	   	
	   	<condition regex="RCPT TO:(.*)\n" >
				<action name="SendMessage" arg1="250 OK\n"></action>
	   	</condition>
	   	
	   	
	   	<condition regex="DATA\n" >
				<action name="SendMessage" arg1="354 Start mail input; end with gtCRLF\n"></action>
	   	</condition>
	   	
	   	<condition regex="(.*)CRLF.CRLF(.*)" >
				<action name="SendMessage" arg1="250 OK\n"></action>
	   	</condition>
	   	
	   	<condition regex="QUIT" >
				<action name="CloseConnection"></action>
	   	</condition>
   	
   	
	</state>
	
	
	
	</rules>